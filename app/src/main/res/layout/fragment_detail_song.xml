<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.detailsong.ui.DetailSongFragment">

    <ProgressBar
        android:id="@+id/pgbDetailSongProgress"
        style="@style/deRumbaStyleProgressBar" />

    <TextView
        android:id="@+id/txvDetailSongNombre"
        style="@style/deRumbaStyleTextSecondaryMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/deRumbaMarginMedium"
        android:text="@string/general.message.loading" />

    <TextView
        android:id="@+id/txvDetailSongInterprete"
        style="@style/deRumbaStyleTextSecondarySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvDetailSongNombre"
        android:layout_margin="@dimen/deRumbaMarginMedium"
        android:layout_marginRight="@dimen/deRumbaMarginMedium"
        android:text="@string/general.message.loading" />

    <TextView
        android:id="@+id/txvDetailSongGenero"
        style="@style/deRumbaStyleTextSecondarySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvDetailSongInterprete"
        android:layout_margin="@dimen/deRumbaMarginMedium"
        android:text="@string/general.message.loading" />


    <TextView
        android:id="@+id/txvDetailSongDuracion"
        style="@style/deRumbaStyleTextSecondarySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txvDetailSongGenero"
        android:layout_margin="@dimen/deRumbaMarginMedium"
        android:text="@string/general.message.loading" />

    <LinearLayout
        android:id="@+id/llyDividerDetailSong"
        style="@style/deRumbaStyleDivider"
        android:layout_below="@id/txvDetailSongDuracion" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llyDividerDetailSong"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvBackPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/deRumbaMarginMedium"
            android:layout_weight="1.0"
            android:contentDescription="@string/detailSong.description.imageRankUp"
            android:src="@drawable/ic_remove_circle_black_48dp" />

        <ImageView
            android:id="@+id/imvRankUp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/deRumbaMarginMedium"
            android:layout_weight="1.0"
            android:contentDescription="@string/detailSong.description.imageRankUp"
            android:src="@drawable/ic_thumb_up_black_48dp"
            android:visibility="visible"/>

    </LinearLayout>


</RelativeLayout>
